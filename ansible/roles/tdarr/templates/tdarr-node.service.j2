[Unit]
Description=Tdarr Node Daemon
After=network.target
Requires=tdarr-server.service

[Service]
User={{ tdarr_user }}
Group={{ tdarr_group }}

Type=simple
WorkingDirectory={{ tdarr_install_folder }}/Tdarr_Node
ExecStart={{ tdarr_install_folder }}/Tdarr_Node/Tdarr_Node
TimeoutStopSec=20
Restart=on-failure

[Install]
WantedBy=multi-user.target