# {{ ansible_managed }}

{% if network_interfaces_resolv_search is defined and network_interfaces_resolv_search | length > 0 %}
search {{ network_interfaces_resolv_search|join(' ') }}
{% endif %}
{% if network_interfaces_resolv_domain is defined and network_interfaces_resolv_domain != "" %}
domain {{ network_interfaces_resolv_domain }}
{% endif %}
{% for ns in network_interfaces_resolv_nameservers %}
nameserver {{ ns }}
{% endfor %}
{% if network_interfaces_resolv_sortlist is defined and network_interfaces_resolv_sortlist | length > 0 %}
{% for sl in network_interfaces_resolv_sortlist %}
sortlist {{ sl }}
{% endfor %}
{% endif %}
{% if network_interfaces_resolv_options is defined and network_interfaces_resolv_options | length > 0 %}
options {{ network_interfaces_resolv_options|join(' ') }}
{% endif %}