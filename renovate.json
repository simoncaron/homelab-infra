{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "git-submodules": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "//^terraform/homelab/lxc_containers\\.tf$//"
      ],
      "matchStrings": [
        "image\\s*=\\s*\\{[^}]*reference\\s*=\\s*\"(?<depName>[^:\"]+):(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^ansible/group_vars/dns/main\\.yml$/"
      ],
      "matchStrings": [
        "# bcook254.adguardhome\\s*\\n\\s*adguardhome_version:\\s*(?<currentValue>[\\d\\.]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "AdguardTeam/AdGuardHome",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^ansible/host_files/gateway01/docker-compose/pangolin/config/traefik/traefik_config\\.yml$/"
      ],
      "matchStrings": [
        "moduleName: github\\.com/(?<depName>[^\\s]+)\\s+version: v(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "git-tags",
      "depNameTemplate": "forgejo/forgejo",
      "extractVersionTemplate": "^v(?<version>\\d+\\.\\d+\\.\\d+)$",
      "managerFilePatterns": [
        "/^ansible/host_vars/forgejo01/main\\.yml$/"
      ],
      "matchStrings": [
        "gitea_version:\\s*(?<currentValue>[\\d\\.]+)"
      ],
      "packageNameTemplate": "https://codeberg.org/forgejo/forgejo",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchDepNames": [
        "code.forgejo.org/forgejo/runner",
        "fredrikburmester/streamystats-v2-migrate",
        "fredrikburmester/streamystats-v2-nextjs",
        "fredrikburmester/streamystats-v2-job-server",
        "tensorchord/vchord-postgres"
      ],
      "automerge": false
    }
  ]
}
